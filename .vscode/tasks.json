{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flutter: Analyze",
			"type": "shell",
			"command": "flutter",
			"args": [
				"analyze"
			],
			"group": "build"
		},
		{
			"label": "Flutter: Test",
			"type": "shell",
			"command": "flutter",
			"args": [
				"test"
			],
			"group": "test"
		},
		{
			"label": "Flutter: Run Windows",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"-d",
				"windows"
			]
		},
		{
			"label": "Tools: Apply app metadata (rename)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-NoProfile",
				"-Command",
				"flutter pub get; dart run tool/apply_app_metadata.dart"
			],
			"group": "build"
		},
		{
			"label": "Flutter: Build Windows (release)",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"windows",
				"--release"
			],
			"group": "build",
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Flutter: Run Windows",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"-d",
				"windows"
			],
			"isBackground": true,
			"group": "build"
		}
	]
}